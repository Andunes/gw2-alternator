<Window x:Class="guildwars2.tools.alternator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:guildwars2.tools.alternator"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Border BorderBrush="#FB651D" BorderThickness="3" CornerRadius="20" Background="#242424">
        <Grid ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition  Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                <Image Source="/images/alternate_orange.png" Width="64"/>
                <TextBlock
                       FontSize="22">
                GW2
                <LineBreak/>
                Alternator
                </TextBlock>
            </StackPanel>

            <DockPanel x:Name="TitleBar" Grid.Row="1" Grid.Column="1" 
                       Background="#242424" 
                       Height="24" 
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Top"
                       LastChildFill="true" 
                       Margin="0,5,10,0">

                <Button DockPanel.Dock="Right"  
                        Padding="0" 
                        Opacity="0.6"
                        VerticalAlignment="Center" 
                        BorderThickness="0" 
                        Height="24" Width="24"
                        Background="Transparent"
                        Style="{StaticResource FadeOutButton}"
                        Click="CloseButton_Click"
                >
                    <Image Source="/images/close-window.png"  Width="24" />
                </Button>

                <Button DockPanel.Dock="Right"  
                        Padding="0" 
                        Margin="0,0,8,0"
                        Opacity="0.6"
                        VerticalAlignment="Center" 
                        BorderThickness="0" 
                        Height="24" Width="24"
                        Background="Transparent"
                        Style="{StaticResource FadeOutButton}"
                        Click="MinimizeButton_Click"
                        >

                    <Image Source="/images/minimize-window.png"  Width="24" />
                </Button>

                <Button DockPanel.Dock="Right"  
                        Padding="0"
                        Margin="0,0,8,0"
                        Opacity="0.6"
                        VerticalAlignment="Center" 
                        BorderThickness="0" 
                        Height="24" Width="24"
                        Background="Transparent"
                        Style="{StaticResource FadeOutButton}"
                        ToolTip="Settings"
                        Command="{Binding Path=ShowSettingsCommand, Mode=OneWay}">

                    <Image Source="/images/settings3.png"  Width="24" />
                </Button>

                <Label Padding="0" FontWeight="DemiBold" Content="{Binding Path=Title}" />

            </DockPanel>


            <StackPanel Grid.Row="2" Grid.Column="0">
                <RadioButton Height="50" Foreground="White" FontSize="14"
                             Command="{Binding LoginAllMultiCommand}"
                             Style="{StaticResource MenuButtonTheme}">
                    Login Parallel
                </RadioButton>
                <RadioButton Height="50" Foreground="White" FontSize="14"
                             Command="{Binding LoginAllSingleCommand}"
                             Style="{StaticResource MenuButtonTheme}">
                    Login Serial
                </RadioButton>
                <RadioButton Height="50" Foreground="White" FontSize="14"
                             Command="{Binding CollectCommand}"
                             Style="{StaticResource MenuButtonTheme}">
                    Collect
                </RadioButton>
                <RadioButton Height="50" Foreground="White" FontSize="14"
                             Style="{StaticResource MenuButtonTheme}">
                    Force Update
                </RadioButton>
                <RadioButton Height="50" Foreground="White" FontSize="14"
                             Command="{Binding StopCommand}"
                             Style="{StaticResource MenuButtonTheme}">
                    Stop!
                </RadioButton>
            </StackPanel>

        </Grid>

    </Border>
</Window>
